{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss",
    "stylelint-order",
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "custom-property-pattern": null,
    "selector-class-pattern": null,
    "selector-pseudo-class-no-unknown": null
  },
  "overrides": [
    {
      "files": ["**/*.css"],
      "rules": {}
    },
    {
      "files": ["**/*.scss"],
      "rules": {}
    }
  ]
}
